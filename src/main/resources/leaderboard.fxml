<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.ooparkanoid.ui.LeaderboardController"
            prefWidth="1280" prefHeight="720"
            stylesheets="@styles/leaderboard.css">
    <top>
        <VBox alignment="CENTER" spacing="8" BorderPane.alignment="CENTER">
            <Label text="LEADERBOARDS" styleClass="leaderboard-title"/>
            <Label fx:id="subtitleLabel" text="Eternal Battle" styleClass="leaderboard-subtitle"/>
        </VBox>
    </top>
    <center>
        <StackPane alignment="CENTER" BorderPane.alignment="CENTER" styleClass="leaderboard-card">
            <TableView fx:id="table" focusTraversable="false" prefHeight="460" prefWidth="900" maxWidth="900">
                <columns>
                    <TableColumn fx:id="placeColumn" text="PLACE" prefWidth="140"/>
                    <TableColumn fx:id="playerColumn" text="PLAYER" prefWidth="460"/>
                    <TableColumn fx:id="pointsColumn" text="POINTS" prefWidth="220"/>
                </columns>
            </TableView>
        </StackPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="12" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets bottom="48" left="48"/>
            </padding>
            <Button fx:id="backButton" text="BACK" styleClass="leaderboard-back-button"/>
            <Label text="ESC" styleClass="leaderboard-back-hint"/>
        </HBox>
    </bottom>
</BorderPane>