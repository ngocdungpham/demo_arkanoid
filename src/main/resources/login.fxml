<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane alignment="CENTER"
           xmlns="http://javafx.com/javafx/11"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ooparkanoid.ui.LoginController"
           styleClass="root-pane"
           stylesheets="@/styles/theme.css">

    <VBox fx:id="formContainer" alignment="CENTER"
          styleClass="login-container">

        <Label text="LOGIN" styleClass="form-title" />

        <TextField fx:id="nameField" promptText="nhập tên đăng nhập" />
        <TextField fx:id="emailField" promptText="nhập email" />
        <PasswordField fx:id="passwordField" promptText="nhập mật khẩu" />

        <Button fx:id="signInButton" text="Đăng nhập"
                styleClass="form-button"
                onAction="#handleSignIn" />

        <Text fx:id="errorText" textAlignment="CENTER" wrappingWidth="330" />

        <HBox alignment="CENTER" spacing="5">
            <VBox.margin>
                <Insets top="10" />
            </VBox.margin>
            <Label text="Don't have an account?" styleClass="form-text" />
            <Text fx:id="signUpLink" text="Sign Up"
                  styleClass="form-link"
                  onMouseClicked="#handleSignUpLinkClick" />
        </HBox>
        <!--        <HBox spacing="10" alignment="CENTER">-->
        <!--            <Button fx:id="signInButton" text="Đăng nhập" styleClass="menu-button" onAction="#handleSignIn"/>-->
        <!--            <Button fx:id="signUpButton" text="Đăng ký" styleClass="menu-button" onAction="#handleSignUp"/>-->
        <!--        </HBox>-->

        <Label text="HOẶC" styleClass="form-text" />

        <Button fx:id="googleSignInButton" text="Đăng nhập bằng Google"
                styleClass="google-button"
                onAction="#handleGoogleSignIn">

        </Button>
        <!--        <Button fx:id="googleSignInButton" text="Đăng nhập với Google" styleClass="menu-button"-->
        <!--                onAction="#handleGoogleSignIn" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>-->

        <!--        <Text fx:id="errorText" fill="RED" wrappingWidth="300" textAlignment="CENTER"/>-->
    </VBox>

</StackPane>
