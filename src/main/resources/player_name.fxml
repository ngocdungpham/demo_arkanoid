<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ooparkanoid.ui.PlayerNameController"
      alignment="CENTER" spacing="25"
      styleClass="root-pane"
      stylesheets="@/styles/theme.css, @/styles/leaderboard.css">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <ImageView fitWidth="400" preserveRatio="true">
        <Image url="@/picture/logo.png"/>
    </ImageView>

    <Label styleClass="leaderboard-title" text="ENTER YOUR NAME"/>

    <TextField fx:id="nameField" promptText="PLAYER" styleClass="text-field" maxWidth="300"/>

    <Button fx:id="startButton" text="START GAME" styleClass="menu-button" onAction="#onStartClick"/>

    <Button fx:id="backButton" text="BACK" styleClass="menu-button" onAction="#onBackClick"/>

</VBox>